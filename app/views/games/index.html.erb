<h1>Games</h1>

<%= form_tag(games_path, method: :get) do %>
  <%= collection_select :genre, :id, Genre.where(id: @genres_searched).order('title ASC'), :id, :title, {prompt: 'Filter by genre...'}, { class: 'form-control mb-3'} %>
  <%= hidden_field_tag(:search, params[:search])%>
  <button type="submit">Filter</button>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Developer</th>
      <th>Metascore</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.developer.name %></td>
        <td><%= game.metascore %></td>
        <td><%= game.price %></td>
        <td><%= link_to 'Show', game %></td>
        <td>
          <% if cart.include?(game) %>
            <%= link_to 'Remove from Cart', cart_path(game), method: :delete %>
          <% else %>
            <% form_with url: cart_index_path, method: :post %>
              <%= hidden_field_tag(:game_id, game.id) %>
              <%= link_to 'Add to Cart' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= paginate @games %>
</div>