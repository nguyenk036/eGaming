<!DOCTYPE html>
<html>
  <head>
    <title>EGaming</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
      <a class="navbar-brand mx-2">eGaming</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <%= link_to "Home", root_path, class: "nav-item nav-link" %>
          <%= link_to "Games", games_path, class: "nav-item nav-link" %>
          <%= link_to "Genres", genres_path, class: "nav-item nav-link" %>
        </div>
      </div>
      <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
        <ul class="navbar-nav ms-auto">
          <% if user_signed_in? %>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <%= link_to "Edit Profile", edit_user_registration_path, class: "nav-item nav-link ms-auto" %>
              </li>
              <li>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-item nav-link ms-auto" %>
              </li>
            </ul>
          <% else %>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_registration_path, class: "nav-item nav-link ms-auto" %>
              </li>
              <li>
                <%= link_to "Login", new_user_session_path, class: "nav-item nav-link ms-auto" %>
              </li>
            </ul>
          <% end %>
          <button type="button" class="btn btn-primary">
            Cart
            <% if cart.present? %>
              <span class="badge bg-info"><%= cart.size %></span>
            <% end %>
          </button>
        </ul>
      </div>
    </nav>
    <section class="m-4">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </section>
  </body>
</html>
