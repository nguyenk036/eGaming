<h1 class="display-2 text-center">Genres</h1>

<div class="container">
  <div class="row">
    <% @genres.each do |genre| %>
      <div class="card m-2" style="width: 18rem;">
        <div class="card-body">
          <h3 class="text-center"><%= link_to genre.title.upcase, genre, class: "text-decoration-none" %></h3>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
