<h1>Orders</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Address</th>
      <th>City</th>
      <th>Postal Code</th>
      <th>Province</th>
      <th>Stripe Payment ID</th>
      <th>Paid amount</th>
      <th col-head=3></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.to_date %></td>
        <td><%= order.address %></td>
        <td><%= order.city %></td>
        <td><%= order.postal_code %></td>
        <td><%= Province.find(order.province_id).name %></td>
        <td><%= order.stripe_payment_id %></td>
        <td><%= order.paid_amount %></td>
        <td><%= link_to "Details", order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
